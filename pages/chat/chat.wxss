.contentes {
    font-size: 14px;
    width: 100%;
    /* min-height: 500px; */
    overflow: auto;
    padding: 5px;
    padding-top:40px;
}
.contentes  li {
    /* margin-top: 10px; */
    /* padding-left: 10px;
    width: 412px; */
    display: block;
    clear: both;
    overflow: hidden;
}
.contentes  li img {
    float: left;
}
.contentes li span{
    background: #7cfc00;
    padding: 10px;
    border-radius: 10px;
    float: left;
    margin: 6px 10px 0 10px;
    max-width: 400px;
    border: 1px solid #ccc;
    box-shadow: 0 0 3px #ccc;
}
.contentes  li image.imgleft { 
    float: left; 
}
.contentes  li image.imgright { 
    float: right; 
}
.contentes  li span.spanleft { 
    float: left;
    background: #fff;
}
.contentes  li span.spanright { 
    float: right;
    background: #7cfc00;
}
