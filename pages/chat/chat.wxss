  .header {
    background: #000;
    height: 40px;
    width: 100%;
    color: #fff;
    line-height: 34px;
    font-size: 14px;
    padding: 0 10px;
    position:fixed; 
    z-index:9999;
}
  .footer {
    width: 100%;
    height: 55px;
    background: #eee;
    /* position: absolute; */
    padding: 5px;
    display: flex;
    flex: 0 0 auto;
    position:fixed; 
    bottom:45px; 
    z-index:9999;
  }
  .footer input {
    width: 72%;
    height: 45px;
    outline: none;
    font-size: 14px;
    text-indent: 10px;
    position: absolute;
    border-radius: 6px;
    margin-left: 40px;
  }
  .footer view {
    display: inline-block;
    width: 10%;
    height: 48px;
    background: #6ad447fa;
    font-weight: 900;
    line-height: 45px;
    cursor: pointer;
    text-align: center;
    position: absolute;
    right: 10px;
    border-radius: 6px;
  }
  .footer view:hover {
    color: #fff;
    background: #999;
  }
  .user_face_icon {
    display: inline-block;
    width: 10%;
    height: 55px;
    position: absolute;
    left: 8px;
    margin-top:5px;
    cursor: pointer;
    overflow: hidden;
  }
  img {
    width: 30px;
