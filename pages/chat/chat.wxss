}
 
 
.progress_bg {
  width: 106rpx;
  height: 106rpx;
  margin: 5rpx;
  position: absolute;
  background: #444;
  border-radius: 50%;
}
 
 
 
.progress_img {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  margin: 12rpx;
}
