/**index.wxss**/
.header-navBar {
  top:0px;
  width: 100%;
  height: 2rem;
  position: fixed;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  background: #efeff4;
  background-color:  #efeff4;
  z-index: 9;
  padding: 10rpx 10rpx;
}
.header-navBar input{
  float:left;
  width: 83%;
  height: 90%;
  line-height: 80rpx;
  border: 1rpx solid #ccc;
  padding:0 10rpx;
  font-size: 35rpx;
  background:#fff;
  text-align:center;

}
.header-navBar view{
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  line-height: 80rpx;
  font-size: 60rpx;
  text-align: center;
  color: #999;
  border: 0px;
  border-radius: 50%;
  margin-left: 10rpx;
}
.aui-cell-flex {
    background: #fff;
    background-color: #FFF;
    position: relative;
    z-index: 1;
    height: 30px;
     margin-top: 50px;
}

.aui-cell-flex .aui-cell-text-fl {
    color: #1b1b1b;
    /* font-size: 16px; */
    white-space: nowrap;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    -ms-flex-align: center;
    align-items: center;
}

.aui-cell-flex .aui-cell-text-fr {
  position:absolute;
  right:0.45rem;
  top: 6px;
	width: 21px;
	height: 21px;
  cursor:pointer; 
}
