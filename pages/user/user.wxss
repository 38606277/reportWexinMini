.section{
	margin:10px 20px; 
	display:flex;
	border-bottom:1px solid #ccc;
	padding:5px 0;
  height: 80rpx;
}
.section__title{
	width:30%;
}
.section__iput{
	width:70%;
	line-height:25px;
	border:1px solid #ccc;
}
.btn-area{
	display:flex;
	justify-content:center;
	margin:20px;
}
.btn-area button{
	width:40%;
}
.item {
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}
.flex-wrp-row {
  display: flex;
  flex-direction: row;
}
.itemnew {
  position: relative;
  margin: 10px;
}
.item-left {
   flex: 1; /* 重要 */
   align-items:center;
}
 
.item-right {
  position: relative;
  align-items:center;
}
.gerenzhonhx{width: 100%;height:6rem;position: relative;margin: 0;}
.grzx_toub_beij{width: 100%;height: 6rem;}

.grzx_toub_beij image{width:100%;height: 6rem;}
.grzx_toux_fus{position: absolute; top:0;left: 0;z-index: 1; width: 100%;height: 6rem; text-align:center; }
.grzx_toux_fus .of{display: inline-block; padding-top: 0.6rem;text-align: center;}
.grzx_toux_fus .of image{
    width: 4rem; 
    height: 4rem;  
    border-radius: 3.2rem; 
    border-radius:50%; 
    overflow: hidden; 
    display: inline-block;
    background-size: 3.0rem 3.5rem;
    -o-background-size: 3.0rem 3.5rem;
    -webkit-background-size: 3.0rem 3.5rem;
}
